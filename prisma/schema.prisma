generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @default(autoincrement()) @id
  email String
  password String
  name String
  secondName String @map("second_name")
  phoneNumber String @map("phone_number")
  type UserType
  advertisments Advertisment[]

  @@map("user")
}

model Rodent {
  id Int @default(autoincrement()) @id
  name String
  type RodentType
  advertisment Advertisment?
  featuresId Int @unique
  features Features @relation(fields: [featuresId], references: [id])

  @@map("rodent")
}

model Advertisment {
  id Int @default(autoincrement()) @id
  description String
  type AdvertismentType
  location String
  userId Int
  user User @relation(fields: [userId], references: [id])
  rodentId Int @unique
  rodent Rodent @relation(fields: [rodentId], references: [id])
}

model Features {
  id Int @default(autoincrement()) @id
  species String
  gender Gender
  age String
  color String
  domestication String
  hairLength String @map("hair_length")
  neutered String
  rodent Rodent?

  @@map("features")
}

enum RodentType {
  GUINEA_PIG
  HAMSTER
  RAT
  MOUSE
  CHINCHILLA
  DEGUS
}

enum UserType {
  BREEDER
  PRIVATE_PERSON
}

enum AdvertismentType {
  BREEDING
  ADOPTIVE
}

enum Gender {
  MALE
  FEMALE
}